<%= turbo_frame_tag "modal" do %>
  <div class="absolute w-full" data-controller="modal" data-action="keyup@document->modal#handleKeyup">
    <!-- Clicking outside the modal will cause it to close -->
    <div class="fixed z-40 inset-0 bg-black/60 overflow-y-auto
                h-full w-full px-4"
         data-action="click->modal#close">
    </div>

    <div class="fixed z-50 inset-0 mx-auto max-w-5xl max-h-screen flex items-center">
      <div class="p-default w-full shadow-lg rounded-md bg-white dark:bg-gray-90 max-h-screen overflow-y-scroll">
        <button data-action="modal#close">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>

        <%= turbo_frame_tag "modal-body" do %>
          <%= yield %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>