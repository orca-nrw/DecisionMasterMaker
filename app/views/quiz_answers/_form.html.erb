<%= form_with(model: [ quiz_node, quiz_answer]) do |form| %>
  <% if quiz_answer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(quiz_answer.errors.count, "error") %> prohibited this quiz_answer from being saved:</h2>

      <ul>
        <% quiz_answer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="flex flex-col">
    <div class="flex gap-2">
      <div class="grow">
        <%= form.label :text, t('quizNodeText'), class: 'mb-2' %>
        <%= form.text_field :text, class: <<~CLASSES
              p-default bg-white dark:bg-black border border-gray-25
              dark:border-gray-75 mb-4
              rounded-md focus:outline-none focus:border-blue-75
              dark:focus:border-blue-25 shadow-md dark:shadow-black
            CLASSES
        %>
      </div>
      <div class="shrink">
        <%= form.label :points, t('quizNodeCorrect'), class: 'mb-2' %>
        <%= form.check_box :points, class: <<~CLASSES
              p-default bg-white dark:bg-black border border-gray-25
              dark:border-gray-75 mb-4
              rounded-md focus:outline-none focus:border-blue-75
              dark:focus:border-blue-25 shadow-md dark:shadow-black
            CLASSES
        %>
      </div>
    </div>
      <%= form.label :explanation, t('quizNodeExplanation'), class: 'mb-2' %>
      <%= form.rich_text_area :explanation %>
      <%= button_tag name: 'commit',
              class: 'text-sm px-2 py-1 rounded-md bg-blue-100
                      text-white shadow-md dark:shadow-black mb-4' do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
          <%= submitString %>
      <% end %>
  </div>
<% end %>
