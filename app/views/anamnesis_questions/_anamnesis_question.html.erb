<%= turbo_frame_tag anamnesis_question do %>
    <div class="mb-4 p-default bg-white dark:bg-black shadow-md
                    dark:shadow-black/90 ring-1 ring-gray-25
                    dark:ring-gray-75 rounded-lg">
        <div class="flex flex-col gap-2">
            <p class="py-2 font-bold">
                <%= anamnesis_question.question %> (<%= anamnesis_question.points %> Pt.)
            </p>
            <p>
                <%= anamnesis_question.answer %>
            </p>
            <p>
                <span class="font-bold"><%= t('fuseNodeReasoning') %>:</span> <%= anamnesis_question.reasoning %>
            </p>
            <p>
                <span class="font-bold"><%= t('fuseNodeTags') %>:</span> <%= anamnesis_question.formatted_tags.join(', ') %>
            </p>
        </div>
        <a href="<%= edit_anamnesis_question_path(anamnesis_question) %>">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block" viewBox="0 0 20 20" fill="currentColor">
                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
            </svg>
            <%= t('edit'); %>
        </a>
        <%= link_to anamnesis_question_path(anamnesis_question), method: :delete, data: {
                turbo_method: :delete,
                controller: :confirm,
                action: 'click->confirm#confirmation',
                confirm_message_value: t('fuseNodeDeleteConfirm')
            } do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
            <%= t('delete'); %>
        <% end %>
    </div>
<% end %>