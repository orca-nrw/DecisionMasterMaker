<li id="<%= dom_id nklm_link %>">
    <%= link_to nklm_link.title, nklm_link.nklm_url, target: :_blank %>
    <%= link_to edit_nklm_link_path(nklm_link.id), data: { turbo_frame: :modal } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block" viewBox="0 0 20 20" fill="currentColor">
            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
        </svg>
    <% end %>
    <%= link_to nklm_link_path(nklm_link.id), method: :delete, data: {
            turbo_method: :delete,
            controller: :confirm,
            action: 'click->confirm#confirmation',
            confirm_message_value: t('stepNklmDelete')
        } do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
    <% end %>
</li>
